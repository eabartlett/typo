<% @page_heading = _('New article') %>

<%= render "admin/shared/edit", { :form_type => "article", :form_action => { :action => "new", :id => @article.id , :class => ('autosave')} } %>
<div id="merge_div">
  <%- if current_user.admin? %>
  <h3>
    Merge Articles
  </h3>
  <%= form_tag "/admin/content/merge", :method => :post do-%>
      <label name="merge_with">Article ID</label>
      <%=hidden_field_tag("article_1", @article.id)%>
      <input type="text" id="merge_with" name="merge_with" />
      <input type="submit" value="Merge">
  <% end-%>
  <% end-%>
</div>
